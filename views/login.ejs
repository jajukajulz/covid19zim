<!DOCTYPE html>
<html lang="en">
  <head>
        <%- include ('./partials/head') %>
  </head>
  <body>

    <!-- START: header -->
    <header>
      <%- include ('./partials/header')  %>
    </header>
    <!-- END: header -->

    <main role="main">
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row align-items-center justify-content-center text-wrap text-break" id="notificationBarRow">
              <div class="col-md-8">
                <%- include ('./partials/notificationbar') %>
              </div>
          </div>
          <div class="row align-items-center justify-content-center" id="loginRow">
            <div>
              <h5>
                <p class="text-muted">LOGIN <i class="fas fa-sign-in-alt"></i></p>
              </h5>
            </div>
            <div class = "container">
              <div class="row align-items-center justify-content-center">
                  <div class="col-sm-4 col-sm-offset-4">
                  <form action="/auth/zero" method="post">
                      <div class="form-group">
                        <label for="email">Login using registered email address</label>
                        <input class="form-control input-lg" type="email" name="email" id="email" placeholder="Enter email" required/>
                      </div>
                      <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-success btn-lg btn-block" value="Log In" />
                      </div>
                  </form>
                </div>
              </div>
            </div>
          </div> 
        </div>
      </div>
    </main>
    <!-- start footer -->
    <%- include ('./partials/footer') %>
    <!-- end footer -->
  </body>
</html>

