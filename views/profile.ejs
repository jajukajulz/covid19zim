<!DOCTYPE html>
<html lang="en">
  <head>
        <%- include ('./partials/head') %>
  </head>
  <body>

    <!-- START: header -->
    <header>
      <%- include ('./partials/header')  %>
    </header>
    <!-- END: header -->

    <main role="main">
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row align-items-center justify-content-center text-wrap text-break" id="notificationBarRow">
              <div class="col-md-8">
                <%- include ('./partials/notificationbar') %>
              </div>
          </div>
          <div class="row align-items-center justify-content-center" id="profileRow">
            <div>
              <h5>
                <p class="text-muted">USER PROFILE <i class="far fa-user"></i></p>
              </h5>
            </div>
            <div class = "container">
              <div class="row">
                <p>
                  ID:<%= user.id %><br/>
                  Username:<%=   user.username %><br/>
                  Name: <%= user.displayName %><br/>
                  Email: <%=  user.email %><br/>
                </p>
                <a href="/logout">Log out</a>                
            </div>
          </div>
          </div> 
        </div>
      </div>
    </main>
    <!-- start footer -->
    <%- include ('./partials/footer') %>
    <!-- end footer -->
  </body>
</html>

